{
  "name": "foundry/masonry",
  "type": "library",
  "description": "A micro framework for building single use or continuous asynchronous task runners",
  "keywords": [
    "task",
    "framework"
  ],
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Daniel Mason",
      "email": "daniel.mason@thefoundry.co.uk",
      "role": "Lead developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Foundry\\Masonry\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Foundry\\Masonry\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^5.5 || ^7.0",
    "psr/log": "^1.0",
    "react/promise": "^2.2",
    "symfony/console": "^2.0",
    "symfony/filesystem": "^2.0",
    "symfony/yaml": "^2.0",
    "foundry/masonry-register": "^1.0.0@alpha"
  },
  "require-dev": {
    "phpunit/phpunit": ">=4.8.21",
    "squizlabs/php_codesniffer": "^2.3",
    "phpmd/phpmd": "^2.2",
    "phploc/phploc": "^2.1",
    "pdepend/pdepend": "2.1",
    "sebastian/phpcpd": "^2.0"
  },
  "bin": [
    "masonry"
  ],
  "config": {
    "github-protocols": [
      "https"
    ]
  },
  "scripts": {
    "test": [
      "vendor/bin/phpunit"
    ],
    "quality": [
      "vendor/bin/phpcpd src",
      "vendor/bin/phpcs --standard=phpcs.xml src",
      "vendor/bin/phpmd src text phpmd.xml",
      "vendor/bin/phploc src"
    ],
    "quality-fix": [
      "vendor/bin/phpcbf --standard=phpcs.xml src"
    ],
    "validate-masonry": "Foundry\\Masonry\\ModuleRegister\\Composer\\Plugin::validate"
  }
}
